<div class="accordion">
	<div class="accordion-group">
		<div class="accordion-heading">
			<span class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
				<i class="icon-th"> </i> 
				<big>New Info & Info Pool.</big>  
				&nbsp;&nbsp;(Add a new piece of information and check all unlinked information
				. Always remember to make this area clean.)
			</span>
	</div>
		<div id="collapseOne" class="accordion-body collapse">
			<div class="row">
				<table class="span4 poolinfo">
					<tr>
					<%= form_for(@newinfopiece) do |f| %>
						<td class="center">
							<%= f.text_area :content, :class => "newpiecefield", :rows => 2, :cols => 60 %>
						</td><td>
							<%= f.submit "add", :class => "btn btn-small btn-danger" %>
						</td>
					<% end %>
					</tr>
				</table>
					
				<% @infopieces.each do |infopiece| %>
					<table class="span2 poolinfo">
						<% @briefinfopiece = infopiece %>
						<%= render "briefinfopiece" %>
					</table>
				<% end %>
			</div>
			<br>
		</div>
		
	</div>
</div>


